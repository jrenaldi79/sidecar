{
  "name": "claude-sidecar",
  "version": "0.3.0",
  "description": "Multi-model subagent tool for Claude Code - spawn parallel conversations with Gemini, GPT-4, o3, and more",
  "keywords": [
    "claude",
    "claude-code",
    "ai",
    "llm",
    "subagent",
    "opencode",
    "gemini",
    "gpt-4"
  ],
  "author": "John Renaldi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jrenaldi79/sidecar"
  },
  "bin": {
    "sidecar": "./bin/sidecar.js"
  },
  "main": "src/index.js",
  "files": [
    "bin/",
    "src/",
    "electron/",
    "skill/"
  ],
  "scripts": {
    "start": "node bin/sidecar.js",
    "test": "jest",
    "lint": "eslint src/",
    "postinstall": "node scripts/postinstall.js",
    "test:thinking": "node scripts/benchmark-thinking.js",
    "test:thinking:quick": "MODELS=gemini node scripts/benchmark-thinking.js",
    "refresh-models": "node scripts/refresh-model-capabilities.js",
    "models:info": "node scripts/refresh-model-capabilities.js --info",
    "models:check": "node scripts/refresh-model-capabilities.js --check"
  },
  "dependencies": {
    "@opencode-ai/sdk": "^1.1.36",
    "chrome-remote-interface": "^0.33.3",
    "dotenv": "^17.2.3",
    "electron": "^28.0.0",
    "puppeteer": "^24.36.0",
    "tiktoken": "^1.0.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ws": "^8.19.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "opencode-ai": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "opencode-ai": {
      "optional": true
    }
  }
}
